@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @ac;
	font:				 	"JetBrains Mono Medium 16";
}

window {
    width:      			450px;
    padding:    			30px;
    border:					4px;
    border-radius:          6px;
    border-color:           @ac;
    location:               center;
    x-offset:               0;
    y-offset:               -4%;
    
}

entry {
    expand: 				true;
    width: 					150px;
    text-color:				@ac;
    placeholder:            "y / yes / n / no";
    placeholder-color:      @bga;
}
